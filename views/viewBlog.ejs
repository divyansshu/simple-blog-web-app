<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>blog.title</title>
</head>

<body>
    <%- include("./partials/nav") %>

    <div class="container mt-4">
    <div>
      <h1><%= blog.title %></h1>
    </div>
    <div class="coverImage mt-4">
      <img src=<%= blog.coverImage %>  width="700px">
    </div>

    <div class="content mt-4">
      <pre><%= blog.content %></pre>
    </div>
    </div>

    <div class="container mt-4">
<img src=<%= blog.createdBy.profileImage %> width="100px"> 
<%= blog.createdBy.name %>
</div>

    <% if (locals.user) { %>
    <div class="container mt-3">
        <form action="/blog/comment/<%= blog._id %>" method="post">
    
            <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <input type="text" name="content" class="form-control" id="comment" placeholder="Add Your Comment">
            </div>
    
            <button type="submit" class="btn btn-sm btn-primary">Add</button>
        </form>
    </div>
    <% } %>

    <div class="mt-3">
      <h5>comments(<%= comments.length %>)</h5>
        <% comments.forEach(comment => { %>
         <div>
            <img src=<%= comment.createdBy.profileImage %> width='50px'/>
            <%= comment.createdBy.name %>
             <pre><%= comment.content %></pre>
         </div>
        <% }) %>
    </div>
    
    <%- include("./partials/script") %>
        </body>
    
        </html>